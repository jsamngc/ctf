{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "preserve",
    "moduleResolution": "node",
    "outDir": "./build",
    "strict": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "public", ".cache"]
}
